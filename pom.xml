    </dependencies>

    <profiles>
        <profile>
            <id>nvd-datafeed-url-defined</id>
            <activation>
                <property>
                    <name>env.owasp_nvdDatafeedUrl</name>
                </property>
            </activation>
            <properties>
                <owasp.nvd-datafeed-url>${env.owasp_nvdDatafeedUrl}</owasp.nvd-datafeed-url>
            </properties>
        </profile>
    </profiles>

</project>
